<% add_title("Endereços")  %>
<% add_title("Congregação #{congregation.full_description}") if congregation  %>

<% if congregation  %>
  <h3>Congregação <%= congregation.full_description %></h3>
<% end %>

<h3>Endereços</h3>

<div class="alert alert-info">
  <p>Endereços cadastrados: <strong><%= total_addresses %></strong></p>
  <p>Endereços verificados: <strong><%= verified_addresses %></strong></p>
  <p>Endereços resolvidos: <strong><%= resolved_addresses %></strong></p>
</div>

<div class="actions">
  <%= link_to('Novo', { action: :new }, class: 'btn btn-primary') %>
</div>

<div class="table-responsive max-height-50vh">
  <table class="table table-striped nowrap">
    <thead>
      <tr>
        <th>Código</th>
        <th>Nome</th>
        <th>Telefone</th>
        <th>Endereço</th>
        <th>Congregação</th>
        <th>Lat/Lon</th>
        <th>Verificado</th>
        <th>Resolvido</th>
      </tr>
    </thead>
    <tbody>
      <% addresses.each_with_index do |address, index| %>
        <tr>
          <td><%= address.id %></td>
          <td><%= link_to(address.householder_name, action: :edit, id: address.id) %></td>
          <td><%= address.phone_number %></td>
          <td><%= address.full_address %></td>
          <td><%= address.congregation.full_description %></td>
          <td><%= address.geolocation %></td>
          <td><%= boolean(address.verified?) %></td>
          <td><%= boolean(address.resolved?) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
